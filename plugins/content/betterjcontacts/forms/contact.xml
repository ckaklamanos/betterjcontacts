<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params" >
		<fieldset name="params" >
			
			<field name="extrafieldssource"
				   type="list"
				   extension="com_contact"
				   show_root="true"
				   scope="haris"
				   label="Select the source of extra fields"
				   description=""
				   default=""
			>  
				<option value="">No extra fields</option>
				<option value="category">Category</option>
				<option value="own">Own fields</option>

			</field>
			
			<field name="mycategory"
				   type="category"
				   extension="com_contact"
				   scope="haris"
				   label="Select a category to inherit extra fields"
				   description=""
		   />
			
			
			<field name="contact_extra_fields"
				type="Repeatable"
				icon="list"
				description="PLG_TINY_FIELD_TEMPLATE_FIELD_ELEMENTS_DESC"
				label="PLG_TINY_FIELD_TEMPLATE_FIELD_ELEMENTS_LABEL"
				default="{'type':['text','list','checkbox','url','color','calendar','editor']}">
				<fields name="params">
					<fieldset hidden="true" name="contact_extra_fields_modal" repeat="true">
						
						<field 
							name="enabled"
							label="Enabled"
							type="checkbox" 
							default=""
						>
						
						</field>
						
						<field 
							name="type"
							label="Select field type"
							type="list" 
							default=""
						>
							
							<option value=" ">Select</option>
							<option value="text">Text</option>
							<option value="list">List</option>
							<option value="checkbox">Checkbox</option>
							<option value="color">Color</option>
							<option value="calendar">Calendar</option>
							<option value="editor">Editor</option>
							<option value="url">URL</option>
							<option value="timezone">Timezone</option>
							<option value="spacer">Spacer</option>
							<option value="file">File</option>
						
						</field>
						
						<field 
							name="name"
							label="Field name"
							type="text" 
							default=" "
						>
		
						</field>

						<field 
							name="label"
							label="Field label"
							type="text" 
							default=" "
						>
		
						</field>
						

						<field 
							name="class"
							label="Class"
							type="text" 
							default=""
						>
						</field>
						
						<field 
							name="placeholder"
							label="Placeholder"
							type="text" 
							default=""
						>
						</field>						

						<field 
							name="default"
							label="Default"
							type="text" 
							default=""
						>
						</field>
						
						<field 
							name="options"
							label="Options"
							type="textarea" 
							default=""
						>
						</field>
						
						

					</fieldset>
				</fields>
			</field>
		</fieldset>
	</fields>
</form>